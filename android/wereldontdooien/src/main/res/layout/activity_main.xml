<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/error"
        android:textStyle="italic"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="@string/error_sync"
        android:paddingBottom="2dp"
        android:alpha="0.4"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        android:contentDescription="@string/cdescr_title"
        android:layout_below="@id/error_bar"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:gravity="center"
        android:padding="16dp"
        android:paddingTop="32dp"
        android:visibility="gone">

        <nl.returntothesource.wereldontdooien.view.SquareView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.view.ViewPager>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title">

        <nl.returntothesource.wereldontdooien.view.SquareView
            android:id="@+id/wereldontdooisters"
            android:src="@drawable/wereldontdooisters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/none_available"
            android:onClick="fetchButtonClicked"
            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_loading"
        android:visibility="gone"
        android:id="@+id/progress_bar">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        </FrameLayout>

</RelativeLayout>